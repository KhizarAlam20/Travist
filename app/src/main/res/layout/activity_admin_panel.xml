<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".AdminPanel">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_medium_bt"
        android:text="DASHBOARD"
        android:textColor="#FDFFFE"
        android:textSize="48sp" />

    <Button
        android:id="@+id/update_flight"
        android:layout_width="238dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/futur"
        android:text="Update Flight"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/update_hotel"
        android:layout_width="238dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/futur"
        android:text="Update Hotel"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/update_restaurants"
        android:layout_width="238dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/futur"
        android:text="Update Res."
        android:layout_gravity="center"
        android:elevation="10dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/del_id"
        android:layout_width="238dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/futur"
        android:text="Delete ID."
        android:layout_gravity="center"
        android:elevation="10dp"
        android:textSize="20sp" />






</LinearLayout>