<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResturantOne">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_heavy"
        android:layout_gravity="center"
        android:text="RESTURANTS"
        android:textColor="@color/teal"
        android:textSize="50dp"
        android:layout_marginTop="80dp"></TextView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futur"
            android:text="Resturant Id:"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="20dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_heavy"
            android:text="456"
            android:id="@+id/resturant_id"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="20dp"></TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/futur"
            android:text="Booking Date:"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="20dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_heavy"
            android:text="name"
            android:id="@+id/resturant_name"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="20dp"></TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/futur"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="20dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_heavy"
            android:text="$456"
            android:id="@+id/resturant_price"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="20dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/futur"
            android:text="user id:"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="20dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_heavy"
            android:text="00"
            android:id="@+id/user_id_val"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginTop="20dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:fontFamily="@font/futur"
            android:text="-"
            android:backgroundTint="@color/teal"
            android:id="@+id/decrease"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="20dp"></Button>

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="2"
            android:id="@+id/no_of_person"
            android:background="#DCFDF1"
            android:paddingLeft="55dp"
            android:fontFamily="@font/futura_heavy"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textSize="27dp"
            android:layout_marginTop="20dp"></TextView>


        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:fontFamily="@font/futur"
            android:id="@+id/increase"
            android:text="+"
            android:backgroundTint="@color/teal"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"></Button>
    </LinearLayout>



    <Button
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:fontFamily="@font/futura_book_font"
        android:id="@+id/save"
        android:layout_gravity="center"
        android:backgroundTint="@color/teal"
        android:text="Save"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"></Button>
    <Button
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:fontFamily="@font/futura_book_font"
        android:id="@+id/back"
        android:layout_gravity="center"
        android:backgroundTint="#15B87D"
        android:text="Back"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"></Button>

</LinearLayout>