<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".UpdateFlight">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_medium_bt"
        android:text="Flights Update"
        android:textColor="#FDFFFE"
        android:textSize="46sp" />


    <EditText
        android:id="@+id/id"
        android:layout_width="220dp"
        android:layout_height="46dp"
        android:background="@drawable/field_background"
        android:ems="10"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/futura_book_font"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="Enter ID"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <EditText
        android:id="@+id/airline"
        android:layout_width="220dp"
        android:layout_height="46dp"
        android:background="@drawable/field_background"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/futura_book_font"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="Updated Airline"
        android:inputType="textPersonName"
        android:padding="10dp" />


    <EditText
        android:id="@+id/dept_loc"
        android:layout_width="220dp"
        android:layout_height="46dp"
        android:background="@drawable/field_background"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/futura_book_font"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="Updated Dep. Loc"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <EditText
        android:id="@+id/arrive_loc"
        android:layout_width="220dp"
        android:layout_height="46dp"
        android:background="@drawable/field_background"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/futura_book_font"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="Updated Arr. Loc"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <EditText
        android:id="@+id/dept_time"
        android:layout_width="220dp"
        android:layout_height="46dp"
        android:background="@drawable/field_background"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/futura_book_font"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="Updated Dep. Time"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <EditText
        android:id="@+id/arrive_time"
        android:layout_width="220dp"
        android:layout_height="46dp"
        android:background="@drawable/field_background"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/futura_book_font"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="Updated Arr. Time"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <EditText
        android:id="@+id/price"
        android:layout_width="220dp"
        android:layout_height="46dp"
        android:background="@drawable/field_background"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/futura_book_font"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="Updated Price"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <Button
        android:id="@+id/register"
        android:layout_width="220dp"
        android:layout_height="46dp"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/futura_medium_bt"
        android:text="Update"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:textSize="17sp" />



</LinearLayout>